<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        renderPostsPageData();

        $('.colored_link').click(function(e) {
            var href = $(this).attr('href');
            document.location.href = href;
        });
        
        $('.mobile_blog_select').change(function(e){
            var href = this.value;
            document.location.href = href;
        });
    }
</script>