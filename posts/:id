<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        var post = getPublishedPostDetailsBySlug(slug);
        renderPostDetails("#post_share_container", "#post_share_template", post);
        renderPostDetails("#post_container", "#post_template", post);
        
        show_content();
        
        $('.mobile_blog_select').change(function(e){
            var href = this.value;
            document.location.href = href;
        });
    }
    
    function renderPostDetails(container, template, collection){
        var item_list = [];
        var item_rendered = [];
        var template_html = $(template).html();
        $.each( collection , function( key, val ) {
            if (val.image_url.indexOf('missing.png') > -1) {
                val.post_image = "//codecloud.cdn.speedyrails.net/sites/5a7c73796e6f646258430000/image/png/1519416315000/Background.png";
            } else {
                val.post_image = val.image_url;
            }
            
            var date_blog = moment(val.publish_date).tz(getPropertyTimeZone());
            val.published_on = date_blog.format('MMM DD, YYYY');

            if (val.tag != undefined){
                val.tag_list = val.tag.join(', ');
            }

            val.twitter_title = val.title + " via The District Tustin";
            
            var rendered = Mustache.render(template_html,val);
            item_rendered.push(rendered);
        });
        
        $(container).html(item_rendered.join(''));
    }
</script>